{
    "delay": "2000",
    "verbose": true,
    "ignore": [
      "client",
      "dist",
      "public"
    ],
    "watch": [
      "server/server.ts",
      "server/core/**/*",
      "server/middleware/**/*",
      "server/services/**/*"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js json ts tsx",
    "exec": "ts-node server/server.ts"
  }