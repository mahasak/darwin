{
    "delay": "2000",
    "verbose": true,
    "ignore": [
      "client",
      "dist",
      "public"
    ],
    "watch": [
      "server.ts",
      "core/**/*",
      "middleware/**/*",
      "services/**/*"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js json ts tsx",
    "exec": "ts-node server.ts"
  }