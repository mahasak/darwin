{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "jsx": "react",
    "strict": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["esnext"],
  },
  "include": [
    "server/server.ts",
    "server/core/**/*",
    "server/middleware/**/*",
    "server/services/**/*",
  ],
  "exclude": [
    "node_modules",
    "/client/",
  ]
}