{
  "name": "bigbears-platform",
  "version": "1.0.0",
  "description": "Sample facebook login/merchant onboarding example",
  "main": "index.js",
  "scripts": {

    "build:client": "cd client && npm run build && mv build client && mv client ../dist",
    "build:server": "tsc",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "clean": "rm -rf ./dist",
    "dev:server": "nodemon --config ./nodemon.json",
    "dev:client": "cd client && npm run start",
    "dev": "concurrently --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\"",
    "start": "NODE_ENV=production node dist/server/server.js"
  },
  "keywords": [],
  "author": "Mahasak Pijittum <mahasak@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.17.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/node": "^13.1.4",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/webpack": "^4.41.2",
    "concurrently": "^5.3.0",
    "css-loader": "^3.4.1",
    "fibers": "^4.0.2",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.13.0",
    "nodemon": "^2.0.2",
    "postcss-loader": "^3.0.0",
    "sass": "^1.24.3",
    "sass-loader": "^8.0.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.2",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  }
}
